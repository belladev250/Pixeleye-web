// /src/app/project/[id]/page.tsx

import React from "react";
import { useRouter } from "next/router";
import projects from "../../../projects";
import Image from "next/image";
import Link from "next/link";

type Props = {
  params: {
    id: string;
  };
};

const ProjectPage = ({ params }: Props) => {
  const { id } = params;
  console.log("Project ID from URL:", id); // Check if params is being passed correctly

  const project = projects.find((p) => p.id.toString() === id);

  if (!project) {
    return <p className="text-center text-red-500 text-xl mt-20">Project not found</p>;
  }

  return (
    <div className="p-8 max-w-4xl mx-auto">
      <h1 className="text-3xl font-bold mb-4">{project.name}</h1>
      <Image
        src={project.image as string}
        alt="Project image"
        width={800}
        height={400}
        className="rounded-md"
      />
      <p className="mt-4 text-lg">{project.description}</p>

      <Link href="/portfolio" className="mt-6 inline-block text-blue-500 hover:underline">
        ‚Üê Back to Portfolio
      </Link>
    </div>
  );
};

export default ProjectPage;
